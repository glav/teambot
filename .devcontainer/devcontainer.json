{
    "name": "devo",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "customizations": {
        "vscode": {
            "settings": {
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true,
                "editor.tabSize": 2,
                "json.schemas": [
                    {
                        "fileMatch": [
                            "*/devcontainer-feature.json"
                        ],
                        "url": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainerFeature.schema.json"
                    }
                ]
            },
            "extensions": [
                "mads-hartmann.bash-ide-vscode",
                "ms-azuretools.vscode-docker",
				"yzhang.markdown-all-in-one",
				"donjayamanne.githistory",
				"eamodio.gitlens",
                "ms-python.python",
				"GitHub.copilot",
				"Gruntfuggly.todo-tree",
				"ionutvmi.path-autocomplete",
				"ms-vsliveshare.vsliveshare",
				"timonwong.shellcheck",
                "esbenp.prettier-vscode",
				"GitHub.vscode-pull-request-github",
                "ms-azuretools.vscode-bicep"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "moby": false
        },
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
        "ghcr.io/devcontainers/features/azure-cli:1.2.5": {},
        "ghcr.io/devcontainers/features/copilot-cli:latest": {}


    },
    "remoteUser": "vscode",
    "forwardPorts": [
        50051,
        50052
    ],
    "postCreateCommand": "bash .devcontainer/post-script.sh",
    "mounts": [
		// map host ssh to container
		"source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached"
	]
}
