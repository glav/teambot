{
  "teambot_dir": ".teambot",
  "default_model": "claude-sonnet-4",
  "default_agent": "pm",
  "agents": [
    {
      "id": "pm",
      "persona": "project_manager",
      "model": "claude-opus-4.5",
      "display_name": "Project Manager",
      "parallel_capable": false,
      "workflow_stages": [
        "setup",
        "planning",
        "coordination"
      ]
    },
    {
      "id": "ba",
      "persona": "business_analyst",
      "model": "gpt-5.2-codex",
      "display_name": "Business Analyst",
      "parallel_capable": false,
      "workflow_stages": [
        "business_problem",
        "spec"
      ]
    },
    {
      "id": "writer",
      "persona": "technical_writer",
      "display_name": "Technical Writer",
      "model": "gpt-5.2-codex",
      "parallel_capable": false,
      "workflow_stages": [
        "documentation"
      ]
    },
    {
      "id": "builder-1",
      "persona": "builder",
      "model": "claude-opus-4.5",
      "display_name": "Builder (Primary)",
      "parallel_capable": true,
      "workflow_stages": [
        "implementation",
        "testing"
      ]
    },
    {
      "id": "builder-2",
      "persona": "builder",
      "model": "claude-opus-4.5",
      "display_name": "Builder (Secondary)",
      "parallel_capable": true,
      "workflow_stages": [
        "implementation",
        "testing"
      ]
    },
    {
      "id": "reviewer",
      "persona": "reviewer",
      "model": "gpt-5.2-codex",
      "display_name": "Reviewer",
      "parallel_capable": false,
      "workflow_stages": [
        "review"
      ]
    }
  ],
  "workflow": {
    "stages": [
      "setup",
      "business_problem",
      "spec",
      "review",
      "research",
      "test_strategy",
      "plan",
      "implementation",
      "test",
      "post_review"
    ]
  },
 "notifications": {
    "enabled": true,
    "channels": [
      {
        "type": "telegram",
        "token": "${TEAMBOT_TELEGRAM_TOKEN}",
        "chat_id": "${TEAMBOT_TELEGRAM_CHAT_ID}"
      }
    ]
  }
}
